generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id     String @id @default(cuid())
  handle String @unique

  slots    TeamSlot[]
  listings RentalListing[]
  equips   EquippedSet[]
}

model TeamSlot {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  set        String
  invitedId  String?
  accepted   Boolean  @default(false)
  expiresAt  DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, set])
  @@index([invitedId])
}

model RentalListing {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  message   String
  rate      String?
  expiresAt DateTime?
  createdAt DateTime @default(now())
}

model EquippedSet {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  sets      Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
